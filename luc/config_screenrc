startup_message off
vbell off
autodetach on
startup_message off
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

#remove some stupid / dangerous key bindings
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind 'K' kill
bind 'I' login on
bind 'O' login off 
bind '}' history

# C-a space to have windowlist
bind ' ' windowlist -b


hardstatus alwayslastline
caption always "%{= kc}%H%{= kw} %{= kw}%-w%{= bW}%n %t%{-}%+w %-= %c"
